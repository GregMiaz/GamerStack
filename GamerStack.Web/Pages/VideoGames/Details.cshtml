@page "{videoGameId:int}"
@model GamerStack.Web.Pages.VideoGames.DetailsModel


<h2>@Model.VideoGame.Title</h2>

@if (Model.Information != null)
{
    <div class="alert alert-info">@Model.Information</div>
}

<div>
    Game Id: @Model.VideoGame.VideoGameId
</div>
<div>
    Description: @Model.VideoGame.Description
</div>
<div>
    Genre: @Model.VideoGame.Genre
</div>
<div>
    Console Model: @Model.VideoGame.Console
</div>
<div>
    Is Game Finished?: @Model.VideoGame.IsFinished
</div>
<a asp-page="./List" class="btn btn-primary">Back to List of Video Games</a>