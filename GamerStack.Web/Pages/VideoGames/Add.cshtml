@page
@model GamerStack.Web.Pages.VideoGames.AddModel
@{
    ViewData["Title"] = "Add";
}

<h2>Add new Video Game to your collection</h2>

<form method="post">

    <input type="hidden" asp-for="VideoGame.VideoGameId" />
    <div class="form-group">
        <label asp-for="VideoGame.Title"></label>
        <input asp-for="VideoGame.Title" class="form-control" />
        <span asp-validation-for="VideoGame.Title" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="VideoGame.Description"></label>
        <input asp-for="VideoGame.Description" class="form-control" />
        <span asp-validation-for="VideoGame.Description" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="VideoGame.Genre"></label>
        <select asp-for="VideoGame.Genre" asp-items="Model.Genres" class="form-control"></select>
        <span asp-validation-for="VideoGame.Genre" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="VideoGame.Console"></label>
        <select asp-for="VideoGame.Console" asp-items="Model.ConsoleTypes" class="form-control"></select>
        <span asp-validation-for="VideoGame.Console" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Save changes</button>
</form>

